<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netcoreapp3.1;net47</TargetFrameworks>
    <PackageId>Markdown.Avalonia</PackageId>
    <Version>1.6.0</Version>
    <Authors>Bevan Arps(original); whistyun</Authors>
    <Company />
    <Description>Markdown processor for Avalonia</Description>
    <Copyright>Copyright (c) 2019 Bevan Arps, 2020 whistyun</Copyright>
    <PackageProjectUrl>https://github.com/whistyun/Markdown.Avalonia</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Markdown Avalniaui </PackageTags>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.11" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="EmojiTable.txt" />
    <None Remove="MarkdownStyle.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="MarkdownStyle.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="EmojiTable.txt" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ColorTextBlock.Avalonia\ColorTextBlock.Avalonia.csproj" />
  </ItemGroup>
</Project>
